---
import { getCollection } from "astro:content";
import MainLayout from "../layouts/Layout.astro";
import CaseStudy from "../components/CaseStudy.astro";

const studies = await getCollection('cases');
---

<MainLayout title="Case Studies & Architectural Deep Dives | Syed Jamal" 
  description="Explore technical case studies on scaling Shopify AI apps, architecting enterprise ERPs, and performance engineering. See how I deliver 30% speed increases and scalable UI systems."
  className="pt-20">
    <section class="relative pt-32 pb-16 overflow-hidden">
    <div class="container px-6 mx-auto">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-6">
          Architectural <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary">Deep Dives</span>
        </h1>
        <p class="text-lg md:text-xl text-muted-foreground leading-relaxed">
          A detailed look at how I solve complex business problems through performance engineering and design-driven development.
        </p>
      </div>
    </div>
  </section>

  <section class="pb-24">
    <div class="container px-6 mx-auto">
      <div class="space-y-32">
        {studies.map((study, index) => <CaseStudy study={study} index={index} />)}
      </div>
    </div>
  </section>
</MainLayout>
