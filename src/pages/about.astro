---
import { getEntry } from "astro:content";
import Image from "astro/components/Image.astro";

import Layout from "../layouts/Layout.astro";
import Timeline from "../components/about/Timeline.astro";
import Education from "../components/about/Education.astro";

const aboutData = await getEntry("about", "main");
const settingsData = await getEntry("settings", "main");

const { data: settings } = settingsData ?? {};
const { data: about } = aboutData ?? {};
---

<Layout
  title="About | Tech Lead & Frontend Architect | Syed Jamal"
  description="Learn about the journey of a Senior Frontend Developer and former Tech Lead. Discover how a background in Graphic Design and Content Writing creates a unique approach to technical excellence."
  className="pt-20"
>
  <main class="py-10 md:py-20 lg:py-32">
    <div class="lg:container mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center mb-32">
        <div class="relative">
          <div
            class="aspect-square rounded-2xl bg-muted overflow-hidden border border-border"
          >
            <div
              class="absolute inset-0 bg-gradient-to-tr from-primary/20 to-secondary/10 rounded-2xl"
            >
              <Image
                width={800}
                height={450}
                src="/assets/avatar.png"
                alt={settings?.siteName ?? "Person Avatar"}
                class="w-full h-full object-cover rounded-2xl group-hover:scale-105 transition-transform duration-500"
              />
            </div>
          </div>
          <div
            class="absolute -bottom-6 -right-6 w-32 h-32 bg-secondary/10 rounded-full blur-3xl -z-10"
          >
          </div>
        </div>

        <div>
          <h1 class="text-4xl font-bold mb-6">
            {about?.heading}
            <br /><span class="text-primary">{about?.subheading}</span>
          </h1>

          {
            about?.bio.map((paragraph) => (
              <p class="text-lg text-muted-foreground leading-relaxed mb-6">
                {paragraph}
              </p>
            ))
          }
          <div class="flex gap-4">
            <a
              target="_blank"
              href={about?.cvLink}
              rel="noopener noreferrer"
              class="px-6 py-3 bg-foreground text-background rounded-lg font-bold hover:bg-primary hover:text-white transition-all"
              >Download CV</a
            >
          </div>
        </div>
      </div>

      {
        about?.showHighlights && (
          <section class="mb-32">
            <h2 class="text-3xl font-bold text-center mb-16">
              {about.highlightsTitle}
            </h2>
            <div class="grid md:grid-cols-3 gap-8">
              {about.highlights?.map((item) => (
                <div class="p-8 border border-border rounded-2xl bg-card hover:border-secondary/50 transition-colors">
                  <h3 class="text-xl font-bold mb-4 text-secondary">
                    {item.title}
                  </h3>
                  <p class="text-muted-foreground text-sm leading-relaxed">
                    {item.description}
                  </p>
                </div>
              ))}
            </div>
          </section>
        )
      }

      <section>
        <div class="flex items-center gap-4 mb-16">
          <h2 class="text-3xl font-bold tracking-tight">Experience</h2>
          <div class="h-px flex-1 bg-gradient-to-r from-border to-transparent">
          </div>
        </div>
        <Timeline />
      </section>

      <Education />
    </div>
  </main>
</Layout>
