          preserveAspectRatio="xMidYMid meet"
          viewBox="0 0 128 128"
          width="128"
          height="128"
        >
          <style>
            path {
              fill: #000;
              transition: fill 0.3s ease; /* Optional: makes the swap smooth */
            }
            @media (prefers-color-scheme: dark) {
              path {
                fill: #fff;
              }
            }
          </style>
          <g transform="translate(0,128) scale(0.1,-0.1)">
