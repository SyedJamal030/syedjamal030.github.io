---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/Layout.astro";
import Hero from "../components/home/Hero.astro";
import ImpactBar from "../components/home/ImpactBar.astro";
import BentoSkills from "../components/home/BentoSkills.astro";
import FeaturedProjects from "../components/home/FeaturedProjects.astro";

const allProjects = await getCollection("projects");
---

<BaseLayout title="Home | Syed Jamal">
  <Hero />
  <ImpactBar />
  <BentoSkills />
  <FeaturedProjects />

  <section class="py-24 bg-card border-t border-border">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        Ready to drive technical excellence?
      </h2>
      <p class="text-muted-foreground mb-10 max-w-xl mx-auto">
        Currently seeking a Senior React/Next.js role where speed and quality
        coexist.
      </p>
      <button
        class="px-10 py-4 bg-primary text-primary-foreground rounded-md font-bold hover:shadow-xl transition-all"
      >
        Get in Touch
      </button>
    </div>
  </section>
