---
const { title = "Syed Muhammad Jamal Waheed | Portfolio" } = Astro.props;

import { getEntry } from "astro:content";

const contactEntry = await getEntry("about", "contact");
const contact = contactEntry?.data;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Syed Jamal - Full Stack Developer Portfolio"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://syedjamal030.github.io/" />
    <meta property="og:title" content={title} />
    <meta property="twitter:card" content="summary_large_image" />
  </head>
  <body class="bg-white text-slate-900 antialiased">
    <nav class="p-6 border-b">
      <div class="max-w-5xl mx-auto flex justify-between items-center">
        <a href="/" class="font-bold text-xl">SJ.</a>
        <div class="space-x-6">
          <a href="/" class="hover:text-indigo-600 transition-colors">Home</a>
          <a href="/projects" class="hover:text-indigo-600">Projects</a>
          <a href="/about" class="hover:text-indigo-600">About</a>
        </div>
      </div>
    </nav>

    <main class="max-w-5xl mx-auto px-6 py-12">
      <slot />
    </main>

    <footer class="border-t border-slate-200 bg-white mt-20">
      <div
        class="max-w-5xl mx-auto px-6 py-12 flex flex-col md:flex-row justify-between items-center gap-6"
      >
        <div>
          <p class="font-bold text-lg">Syed Jamal</p>
          <p class="text-slate-500 text-sm">Full-Stack Developer</p>
        </div>

        <div class="flex gap-6">
          {
            contact?.email && (
              <a href={`mailto:${contact.email}`} class="hover:text-indigo-600">
                Email
              </a>
            )
          }
          {
            contact?.github && (
              <a
                href={contact.github}
                target="_blank"
                class="hover:text-indigo-600"
              >
                GitHub
              </a>
            )
          }
          {
            contact?.linkedin && (
              <a
                href={contact.linkedin}
                target="_blank"
                class="hover:text-indigo-600"
              >
                LinkedIn
              </a>
            )
          }
        </div>
      </div>
      <div class="text-center py-10 border-t border-gray-300 text-slate-500">
        &copy; {new Date().getFullYear()} Built with Astro
      </div>
    </footer>
    <!-- <footer class="text-center py-10 border-t text-slate-500">
    </footer> -->
  </body>
</html>
