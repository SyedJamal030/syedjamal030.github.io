---
import "../styles/global.css"; // We will create this in a second
const { title = "Syed Muhammad Jamal Waheed | Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white text-slate-900 antialiased">
    <nav class="p-6 border-b">
      <div class="max-w-5xl mx-auto flex justify-between items-center">
        <a href="/" class="font-bold text-xl">SJ.</a>
        <div class="space-x-6">
          <a href="/projects" class="hover:text-indigo-600">Projects</a>
          <a href="/about" class="hover:text-indigo-600">About</a>
        </div>
      </div>
    </nav>

    <main class="max-w-5xl mx-auto px-6 py-12">
      <slot />
    </main>

    <footer class="text-center py-10 border-t text-slate-500">
      &copy; {new Date().getFullYear()} Built with Astro
    </footer>
  </body>
</html>
