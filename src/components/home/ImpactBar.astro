---
import { getEntry } from "astro:content";
import Counter from "./Counter.astro";

const aboutData = await getEntry("about", "main");
const { data: about } = aboutData ?? {};

const stats = [
  { label: "Years Experience", value: "7+" },
  { label: "Projects Delivered", value: "10+" },
  { label: "Client Satisfaction", value: "100%" },
  { label: "Avg. Performance Boost", value: "30%" },
];
---

{
  about?.showImpact && (about.impact ?? []).length > 0 && (
    <div class="py-12 border-y border-border/50 bg-secondary/5">
      <div class="lg:container mx-auto px-6">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          {(about.impact ?? []).map((impact) => (
            <div>
              <div class="text-3xl md:text-4xl font-bold text-secondary">
                <Counter
                  target={impact.target}
                  label={impact.label}
                  suffix={impact.suffix}
                  prefix={impact.prefix}
                />
              </div>
              <p class="text-xs uppercase tracking-widest text-muted-foreground mt-1">
                {impact.label}
              </p>
            </div>
          ))}
        </div>
      </div>
    </div>
  )
}
