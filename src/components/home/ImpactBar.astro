---
const stats = [
  { label: "Years Experience", value: "7+" },
  { label: "Projects Delivered", value: "10+" },
  { label: "Client Satisfaction", value: "100%" },
  { label: "Avg. Performance Boost", value: "30%" },
];
---

<div class="py-12 border-y border-border/50 bg-secondary/5">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {
        stats.map((stat) => (
          <div class="text-center md:text-left">
            <p class="text-3xl md:text-4xl font-bold text-secondary">
              {stat.value}
            </p>
            <p class="text-xs uppercase tracking-widest text-muted-foreground mt-1">
              {stat.label}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</div>
