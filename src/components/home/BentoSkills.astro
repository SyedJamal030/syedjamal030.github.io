---
import { getEntry } from "astro:content";
const skillsManifest = await getEntry("skills", "main");
const { data: skills } = skillsManifest ?? {};
---

<section class="container py-24 px-6 mx-auto" id="skills">
  <div class="mb-16 space-y-4">
    <h2 class="text-4xl font-bold tracking-tight sm:text-5xl">
      Technical <span class="text-primary">Arsenal</span>
    </h2>
    <p class="text-muted-foreground max-w-2xl text-lg">
      A comprehensive breakdown of my digital craftsmanship, from core
      architecture to design systems.
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    {
      skills?.categories.map((category) => (
        <div class="group relative p-8 rounded-lg border border-border bg-card shadow-sm transition-all duration-300 hover:shadow-lg hover:-translate-y-1 hover:border-secondary/50">
          <div class="absolute top-0 left-0 w-1 h-0 bg-secondary transition-all duration-300 group-hover:h-full rounded-l-lg" />

          <h3 class="text-xl font-bold mb-3 group-hover:text-primary transition-colors">
            {category.title}
          </h3>

          <p class="text-sm text-muted-foreground mb-20 leading-relaxed">
            {category.description}
          </p>

          <div class="flex flex-wrap gap-2">
            {category.skills.map((skill) => (
              <span class="px-3 py-1 text-xs font-medium rounded-full bg-muted border border-border text-foreground transition-colors group-hover:bg-accent group-hover:text-accent-foreground">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</section>
